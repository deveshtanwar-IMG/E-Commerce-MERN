        const previewHandler = (e) => {
            var input = event.target;
            var preview = document.getElementById('preview');

            var reader = new FileReader();
            reader.onload = function () {
                preview.src = reader.result;
                preview.style.display = "inline-block";
            };
            reader.readAsDataURL(input.files[0]);// important line
        }


        $(document).ready(function () {

            load_data();

            function load_data() {
                $.ajax({
                    url: "/get-category",
                    method: "GET",
                    dataType: "JSON",
                    success: function (data) {
                        data.forEach((val) => {
                            console.log(val)
                            $('#Category').append(
                                $('<option>', {
                                    value: val._id,
                                    text: val.title,
                                })
                            )
                        })
                    }
                });
            }

        });

        const fetchId = (e) => {
            $('#sub-category').empty();
            console.log(e.target.value)
            $.ajax({
                url: "/get-sub-category",
                method: "POST",
                dataType: "JSON",
                data: { id: e.target.value },
                success: function (data) {
                    data.forEach((val) => {
                        console.log(val)
                        $('#sub-category').append(
                            $('<option>', {
                                value: val._id,
                                text: val.title,
                            })
                        )
                    })
                }
            });
        }

        const fetchSubCategory = (e) => {
            console.log(e.target.value)
            const formSubmit = document.getElementById('product-form');
            formSubmit.setAttribute('action', `/add-product/${e.target.value}`)
        }

