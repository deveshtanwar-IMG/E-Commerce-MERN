                    </select>
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Product Title</label>
                    <input type="text" class="form-control" id="title" name="title" required
                        onkeyup="validateForm(event)" />
                    <!-- <span style="color: red;" id="name-error"></span> -->
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Product Price</label>
                    <input type="number" class="form-control" id="price" name="price" required
                        onkeyup="validateForm(event)" />
                    <!-- <span style="color: red;" id="name-error"></span> -->
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Product Description</label>
                    <textarea class="form-control" id="desc" name="desc" required onkeyup="validateForm(event)"rows="1"></textarea>
                    <!-- <p style="color: red;" id="email-error"></p> -->
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Select Image</label>
                    <input type="file" class="form-control" id="image" name="image" onchange='previewHandler(event)'>
                </div>
                <div style="width: 300px;">
                    <button type="submit" class="btn btn-primary" id="add">Submit</button>
                    <img src="/" id="preview" style="width: 50px; display: none" class="ms-2" />
                </div>
            </form>
        </div>

